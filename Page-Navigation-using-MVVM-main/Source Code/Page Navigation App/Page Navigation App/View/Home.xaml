<UserControl x:Class="Page_Navigation_App.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622">

    <Grid>
        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#212529" Offset="0.0" />
                    <GradientStop Color="#212529" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>

            <!-- Add your gaming platform home content here -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="340" Width="360">
                <TextBlock Foreground="White" FontSize="24" Margin="10">Welcome to Gaming Platform</TextBlock>
          
                <Image Source="/Images/video-game-play-toad-mushroom-mario_108577.ico" Width="200" Height="200" Margin="10" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
